// -*- mode: jsonc -*-
{
  "spacing": 4,
  // Choose the order of the modules
  "modules-left": [
    "sway/mode",
    "sway/workspaces",
    "sway/scratchpad",
    "sway/window"
  ],
  "modules-right": [
    "clock",
    "pulseaudio",
    "backlight",
    "cpu",
    "memory",
    "disk",
    "temperature",
    "battery",
    "sway/language",
    "tray"
  ],
  // Modules configuration
  "sway/mode": {
    "format": "<span style=\"italic\">{}</span>"
